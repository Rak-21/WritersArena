<!DOCTYPE html>
<html>
    <head>
        <title>Writers Arena</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/stylesheets/people.css">
    </head>
    <body>

<%- include("../partials/navbar"); -%>


<div class="jumbotron">
    <div>
        <% if(currentUser && currentUser.isAdmin) {%>
            <h3>You are an Admin!</h3>
        <% } %>
    </div>
    <div class="container">
        <div class="mx-auto">
            <form action="#" method="GET">
                <div class="input-group">
                    <input id="searchBox" type="text" name="search" placeholder="search people" class="form-control">
                    <div class="input-group-append">
                        <input id="searchButton" type="submit" value="Search" class="btn">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="wrapper">
    <div class="container">
        <div class="row">
            <% if(noMatch !== null){%>
                <h3><%= noMatch %></h3>
            <% } %>
            <% users.forEach(function(user){ %>
                <div class="col-sm-6 col-md-4 col-lg-3 p-0 p-lg-3">
                    <div class="car p-0">
                        <div class="box">
                            <div class="img">
                                <a href="/users/<%= user._id %>"><img src="<%=user.avatar%>" alt="user profile image"></a>
                            </div>
                            <a href="/users/<%= user._id %>"><h2><%=user.firstName+" "+user.lastName%></h2></a>
                            <a href="/users/<%= user._id %>"><h5 style="font-size:15px; color:grey;"><%=user.username%></h5></a>
                            <a href="/users/<%= user._id %>"><p><%= user.bio %></p></a>
                                <ul>
                                <li><a href="https://<%=user.facebook%>"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                 <li><a href="https://<%=user.twitter%>"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                 <li><a href="mailto:<%= user.email %>"><i class="fa fa-envelope  aria-hidden="true""></i></a></li>
                                 <li><a href="https://<%=user.instagram%>"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                             </ul>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>












<%- include("../partials/footer"); -%>